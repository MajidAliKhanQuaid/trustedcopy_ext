{
  "manifest_version": 3,
  "name": "Trusted Copy",
  "version": "0.0.1",
  "description": "Trusted Copy Extension for capturing download",
  "author": "admin@trustedcopy.com",
  "icons": {
    "16": "images/icon.png",
    "48": "images/icon.png",
    "128": "images/icon.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon.png",
      "48": "images/icon.png",
      "128": "images/icon.png"
    },
    "default_title": "Trusted Copy Digital"
  },
  "web_accessible_resources": [
    {
      "resources": ["images/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js", "scripts/jquery-3.7.1.js"]
    }
  ],
  "host_permissions": ["<all_urls>"],
  "options_page": "options.html",
  "permissions": [
    "cookies",
    "scripting",
    "storage",
    "webRequest",
    "downloads",
    "downloads.open",
    "tabs",
    "activeTab",
    "contextMenus",
    "nativeMessaging"
  ],
  "background": {
    "service_worker": "background.js"
  }
}
